<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AppFeatureActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_main_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_item_for_intro_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabRippleColor="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_pager_main_login"
        app:tabBackground="@drawable/tab_layout"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabIndicatorHeight="0dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_to_next_scr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/app_main_color"
        android:fontFamily="@font/comfortaa"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_item_for_intro_screen"
        app:layout_constraintVertical_bias=".4"
         />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/skip_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#e9f0ff"
        android:fontFamily="@font/comfortaa_bold"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/app_main_color"
        android:textSize="17sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_to_next_scr"
        />


</androidx.constraintlayout.widget.ConstraintLayout>