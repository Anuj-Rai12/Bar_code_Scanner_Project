<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue_bg">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/image_btn_to_choose"
        android:layout_width="242dp"
        android:layout_height="190dp"
        android:background="@drawable/blue_border_for_table_mangment"
        android:paddingStart="33dp"
        android:paddingTop="26dp"
        android:paddingEnd="18dp"
        android:paddingBottom="21dp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/tablewaiter" />

    <TextView
        android:id="@+id/btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:textColor="@color/light_grey_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/image_btn_to_choose"
        app:layout_constraintRight_toRightOf="@id/image_btn_to_choose"
        app:layout_constraintTop_toBottomOf="@id/image_btn_to_choose"
        tools:text="@string/item_table" />


</androidx.constraintlayout.widget.ConstraintLayout>