<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/serial_number_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/food_item_one_selcetion_layout"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/light_grey_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/name_of_customer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight=".3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_of_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/food_item_one_selcetion_layout"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        tools:text="@string/name_of_customer"
        android:textAlignment="center"
        android:textColor="@color/light_grey_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/phone_number"
        app:layout_constraintHorizontal_weight="1.2"
        app:layout_constraintStart_toEndOf="@+id/serial_number_txt"
        app:layout_constraintTop_toTopOf="@id/serial_number_txt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/food_item_one_selcetion_layout"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        tools:text="+915678546548794565789456879456"
        android:textAlignment="center"
        android:textColor="@color/light_grey_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/time_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight=".6"
        app:layout_constraintStart_toEndOf="@+id/name_of_customer"
        app:layout_constraintTop_toTopOf="@id/name_of_customer" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/food_item_one_selcetion_layout"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        tools:text="10:00 PM"
        android:textAlignment="center"
        android:textColor="@color/light_grey_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight=".6"
        app:layout_constraintStart_toEndOf="@+id/phone_number"
        app:layout_constraintTop_toTopOf="@id/phone_number" />

</androidx.constraintlayout.widget.ConstraintLayout>