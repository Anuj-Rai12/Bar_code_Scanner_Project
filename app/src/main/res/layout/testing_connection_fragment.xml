<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_bg"
    tools:context="com.example.offiqlresturantapp.ui.testingconnection.TestingConnectionFragment">

    <TextView
        android:id="@+id/mpos_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="12sp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/app_title"
        android:textColor="@color/light_grey_color"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_file_id"
        android:layout_width="31dp"
        android:layout_height="34dp"
        android:layout_marginTop="11sp"
        android:layout_marginEnd="12sp"
        android:contentDescription="@string/app_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logofile" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scan_or_code_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/white_underline_boder"
        android:drawableEnd="@drawable/qr_code"
        android:drawablePadding="15dp"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="25dp"
        android:paddingTop="17dp"
        android:paddingEnd="10dp"
        android:paddingBottom="16dp"
        android:text="@string/scan_btn"
        android:textAllCaps="false"
        android:textColor="@color/light_grey_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/mpos_id"
        app:layout_constraintRight_toRightOf="@id/logo_file_id"
        app:layout_constraintTop_toBottomOf="@id/mpos_id" />

    <TextView
        android:id="@+id/store_no_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/store_no"
        android:textColor="@color/light_grey_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scan_or_code_id" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/store_no_ed_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/light_grey_color"
        app:endIconMode="clear_text"
        app:endIconTint="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/store_no_txt"
        app:layout_constraintRight_toRightOf="@id/user_name_ed_layout"
        app:layout_constraintTop_toBottomOf="@id/store_no_txt">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/store_no_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_medium"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/user_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/user_name"
        android:textColor="@color/light_grey_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/store_no_ed_layout"
        app:layout_constraintTop_toBottomOf="@id/store_no_ed_layout" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_name_ed_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/light_grey_color"
        app:endIconMode="clear_text"
        app:endIconTint="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/user_name_id"
        app:layout_constraintRight_toLeftOf="@id/logo_file_id"
        app:layout_constraintTop_toBottomOf="@id/user_name_id">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_name_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_medium"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/user_pass_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/user_pass"
        android:textColor="@color/light_grey_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/user_name_ed_layout"
        app:layout_constraintTop_toBottomOf="@id/user_name_ed_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_pass_ed_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/light_grey_color"
        app:layout_constraintLeft_toLeftOf="@id/user_name_id"
        app:layout_constraintRight_toLeftOf="@id/logo_file_id"
        app:layout_constraintTop_toBottomOf="@id/user_pass_id"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_pass_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_medium"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/test_connection_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/golden_underline_border"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="36dp"
        android:paddingTop="16dp"
        android:paddingEnd="38dp"
        android:paddingBottom="17dp"
        android:text="@string/btn_test_con"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/user_pass_ed_layout"
        app:layout_constraintRight_toRightOf="@id/user_pass_ed_layout"
        app:layout_constraintTop_toBottomOf="@id/user_pass_ed_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>