<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_white_color"
    tools:context="com.example.mpos.ui.searchfood.SearchFoodFragment">

    <View
        android:id="@+id/border_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:elevation="5dp"
        android:background="@color/dark_blue_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/back_arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arr_bck"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_arrow_back_24"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/border_bottom"
        app:layout_constraintTop_toBottomOf="@id/border_top" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/search_box_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white_underline_boder"
        android:ellipsize="end"
        android:backgroundTint="#f2f2f2"
        android:fontFamily="@font/roboto_medium"
        android:hint="@string/src_hint"
        android:padding="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#838383"
        app:layout_constraintBottom_toBottomOf="@id/border_bottom"
        app:layout_constraintLeft_toRightOf="@id/back_arrow_img"
        app:layout_constraintRight_toLeftOf="@id/cross_btn_img"
        app:layout_constraintTop_toBottomOf="@id/border_top" />

    <ImageView
        android:id="@+id/cross_btn_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/circle_shape"
        android:contentDescription="@string/clos_btn"
        android:padding="3dp"
        android:src="@drawable/ic_close_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_box_ed"
        app:layout_constraintBottom_toBottomOf="@id/search_box_ed"
        tools:visibility="visible" />

    <View
        android:id="@+id/border_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="5dp"
        android:layout_marginTop="13dp"
        android:background="@color/dark_blue_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cross_btn_img" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_of_food_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border_bottom"
        tools:listitem="@layout/food_item_layout" />


    <include
        android:id="@+id/pb_layout"
        layout="@layout/progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border_bottom"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>