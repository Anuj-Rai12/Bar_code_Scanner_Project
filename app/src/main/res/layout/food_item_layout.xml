<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/semi_white_color"
    android:padding="18dp">

    <ImageView
        android:id="@+id/btn_close_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/clos_btn"
        android:src="@drawable/ic_close_24"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/food_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textColor="@color/light_grey_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/offer_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_close_id"
        tools:text="Chole Bhutore" />


    <TextView
        android:id="@+id/offer_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/off_txt"
        android:textColor="@color/table_green"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/food_item_tv"
        app:layout_constraintTop_toBottomOf="@id/btn_close_id" />


    <TextView
        android:id="@+id/food_price_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/light_grey_color"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/offer_detail_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/food_item_tv"
        tools:text="$ 1223" />


    <TextView
        android:id="@+id/offer_detail_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textColor="@color/light_grey_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout_for_item_count"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/food_price_tv"
        app:layout_constraintTop_toBottomOf="@id/food_item_tv"
        tools:text=" +1 Pepsi @15/-" />


    <LinearLayout
        android:id="@+id/linearLayout_for_item_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/offer_detail_tv"
        app:layout_constraintTop_toBottomOf="@id/food_item_tv"
        tools:visibility="visible">


        <ImageButton
            android:id="@+id/btn_minus_count"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="@string/hint_btn_minus"
            android:scaleType="fitXY"
            android:src="@drawable/ic_remove_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/total_food_item_qty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/black_underline_border"
            android:paddingStart="8dp"
            android:paddingTop="3dp"
            android:paddingEnd="9dp"
            android:paddingBottom="5dp"
            android:textColor="@color/light_grey_color"
            tools:text="2" />


        <ImageButton
            android:id="@+id/btn_add_count"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="@string/hint_btn_add"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add" />

    </LinearLayout>


    <View
        android:id="@+id/border_bottom_food"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="27dp"
        android:background="@color/dark_blue_bg"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/food_price_tv"
        tools:visibility="visible" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_offer_list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_bg"
        android:overScrollMode="never"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="@id/border_bottom_food"
        app:layout_constraintRight_toRightOf="@id/border_bottom_food"
        app:layout_constraintTop_toBottomOf="@id/border_bottom_food"
        tools:listitem="@layout/offer_item_layout"
        tools:visibility="visible" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_with_offer"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/add_offer_btn_border_layout"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="23dp"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:paddingBottom="6dp"
        android:text="@string/btn_with_offer"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btn_without_offer"
        tools:visibility="visible" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_without_offer"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/add_with_out_offer_btn_layout"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="6dp"
        android:text="@string/btn_without_offer"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_with_offer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_offer_list_view"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>