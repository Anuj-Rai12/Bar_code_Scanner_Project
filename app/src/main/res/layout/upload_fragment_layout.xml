<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.motionlyt.ui.upload.UploadFragment">


    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:fontFamily="@font/comfortaa_bold"
        android:padding="10dp"
        android:text="@string/add_file"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/dotted_border"
        android:layout_marginTop="40dp">


        <ImageView
            android:id="@+id/no_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_margin="1dp"
            android:src="@drawable/ic_add"
            android:background="#f5f5f5"
            app:tint="#acacac" />


        <ImageView
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_margin="1dp"
            android:src="@drawable/ic_notes"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/uplaod_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/app_main_color"
        android:fontFamily="@font/comfortaa"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Upload"
        android:layout_marginTop="50dp"
        app:iconGravity="textStart"
        app:icon="@drawable/ic_upload"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_item_for_intro_screen"
        app:layout_constraintVertical_bias=".4"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/skip_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#E82A2A"
        android:fontFamily="@font/comfortaa_bold"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Clear"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_to_next_scr"
        />

</LinearLayout>